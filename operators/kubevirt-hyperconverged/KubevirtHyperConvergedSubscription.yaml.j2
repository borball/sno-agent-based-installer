{% set default_source='redhat-operators' -%}
{% set catsrc = customs|selectattr('provide', '==', default_source)|map(attribute='name')|list -%}
{% if catsrc -%}
{% set default_source=catsrc[0] -%}
{% endif -%}
---
apiVersion: operators.coreos.com/v1alpha1
kind: Subscription
metadata:
  name: kubevirt-hyperconverged-sub
  namespace: openshift-cnv
spec:
  name: kubevirt-hyperconverged
  source: {{ source | default(default_source) }}
  channel: {{ source | default('channel') }}
  sourceNamespace: openshift-marketplace
  {% if version is not none -%}
  startingCSV: {{ version }}
  installPlanApproval: Manual
  {% else -%}
  installPlanApproval: Automatic
  {%- endif %}
